{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": {"text": "Average Happiness Score in each region"},
    "data": {
      "url": "https://raw.githubusercontent.com/weiliang-chen/FIT3179/main/data/world-happiness-report.csv"
    },
    "params": [
      {
        "name": "data",
        "bind": {
        "input": "select",
        "options": [
          "mean_score",
          "mean_gdp",
          "mean_social_support",
          "mean_healthy",
          "mean_freedom",
          "mean_generosity",
          "mean_corruption"
        ],
        "labels": [
          "Score",
          "GDP per capita",
          "Social support",
          "Healthy",
          "Freedom",
          "Generosity",
          "Perceptions of corruption"],
        "name": "Data: "
        }
      }   
    ],
    "transform": [
        {"filter": "datum.year >= 2007"},
        {
            "aggregate": [
              {"op": "average", "field": "Score", "as": "mean_score"},
              {"op": "average", "field": "GDP_per_capita", "as": "mean_gdp"},
              {"op": "average", "field": "Social_support", "as": "mean_social_support"},
              {"op": "average", "field": "Healthy", "as": "mean_healthy"},
              {"op": "average", "field": "Freedom", "as": "mean_freedom"},
              {"op": "average", "field": "Generosity", "as": "mean_generosity"},
              {"op": "average", "field": "Perceptions_of_corruption", "as": "mean_corruption"}
            ],
            
            "groupby": ["Region", "year"]
        }
    ],
    "encoding": {
      "color": {
        "field": "Region",
        "type": "nominal",
        "scale": {
          "domain": [
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "range": [
            "#e41a1c",
            "#984ea3",
            "#ff7f00",
            "#a6cee3",
            "#377eb8",
            "#a65628"
          ]
        },
        "legend": {"format": ""}
      }
    },
    "layer": [
      {
        "mark": "line",
        "encoding": {
          "x": {
            "field": "year",
            "type": "temporal",
            "timeUnit": "year",
            "title": "year",
            "scale": {"type": "linear", "domain": [2007, 2021]}
          },
          "y": {
            "field": "mean_score",
            "aggregate": "average",
            "type": "quantitative",
            "title": "Score",
            "scale": {"type": "linear", "domain": [2, 8]}
          },
          "tooltip": [
            {"field": "Region", "type": "nominal"},
            {"field": "mean_score", "type": "quantitative", "title": "average"}
          ]
        }
      }
    ]
}